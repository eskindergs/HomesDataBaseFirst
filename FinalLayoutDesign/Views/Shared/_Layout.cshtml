<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title -California Home</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
         @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body style ="background-color:aliceblue;">
        
         
            
             <div class="content-wrapper" style="background-color:white">
                 <br />
                       @*Page Layout Login view *@
                         <div class="float-right">
                              <section id="login">
                                  @Html.Partial("_LoginPartial")
                              </section>
                         </div>
                     
                 <br /><hr />
                       @* Page Layout Logo and company Name *@
                        <div style="margin-top: 25px;">
                               <p class="site-title">
                                     <img src="~/Images/homelogo.png"  style ="float:left; padding-right:150px; border:none; width:50px; height:50px;"">
                                      <span style ="text-align :right">
                                          California Homes
                                      </span>
                               </p>  
                        </div>
                      <br /> <br /><hr />
                       @* Page Layout Menu Content*@
                        <div class="float-left">
                               <nav>
                                     <ul id="menu">
                                         <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                         <li>@Html.ActionLink("About", "About", "Home")</li>
                                         <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                     </ul>
                               </nav>
                       </div>
                    <br /><br /><hr />
                     
                       @*Page Layout Body Content *@
                           <div id="body" style ="height : 685px">
                                 @RenderSection("featured", required: false)
                               <section class="content-wrapper main-content clear-fix">
                                     @RenderBody()
                               </section>
                          </div>

                       @* PageLayout footer content*@
                         <footer style="height:30px;">
                            <div class="content-wrapper">
                              <div class="float-left">
                                     <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                             </div>
                           </div>
                         </footer>

                  </div>
           
            
         
      @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
